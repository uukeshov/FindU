<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uukeshov.findu.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>

    <Button
        android:id="@+id/getLocation_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape"
        android:onClick="onClick"
        android:shadowColor="#19A865"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Найти"
        android:textColor="#302CA8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/map_btn"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/ad_view"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ad_view"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape"
        android:onClick="onClick"
        android:shadowColor="#19A865"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Карта"
        android:textColor="#302CA8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/getlist_btn"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/faq_btn"
        android:background="@drawable/buttonshape"
        android:onClick="onClick"
        android:shadowColor="#19A865"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Найстройки"
        android:textColor="#302CA8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sendinfo_btn"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/getlist_btn"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape"
        android:onClick="onClick"
        android:shadowColor="#19A865"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Новости"
        android:textColor="#302CA8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/faq_btn"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/map_btn"
        android:layout_alignStart="@+id/map_btn"
        android:layout_below="@+id/map_btn"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape"
        android:onClick="onClick"
        android:shadowColor="#19A865"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Справка"
        android:textColor="#302CA8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/aboutCreator_btn"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/faq_btn"
        android:layout_alignStart="@+id/faq_btn"
        android:layout_below="@+id/faq_btn"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonshape"
        android:onClick="onClick"
        android:shadowColor="#19A865"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Автор"
        android:textColor="#302CA8"
        android:textSize="25sp" />


</RelativeLayout>
